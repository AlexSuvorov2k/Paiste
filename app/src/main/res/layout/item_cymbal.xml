<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cymbalsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cymbalSeriesImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:foregroundGravity="left"
        android:padding="4dp"
        android:scaleType="fitCenter"
        tools:ignore="ContentDescription"
        tools:src="@drawable/fam_101brass" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cymbalSeriesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:gravity="start"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Paiste Rude" />

        <TextView
            android:id="@+id/cymbalSeriesSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            tools:text="MODERD SOUND FOR ROCK AND JAZZ" />
    </LinearLayout>
</LinearLayout>